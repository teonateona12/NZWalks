<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="mt-3">Regions</h1>
        <a class="btn btn-secondary" asp-controller="Regions" asp-action="Add">Add Region</a>
    </div>

    <div class="row">
        <div class="col">
            <table class="table table-bordered">
                <thead class="thead-light">
                    <tr>
                        <th>Id</th>
                        <th>Code</th>
                        <th>Name</th>
                        <th> </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var region in Model)
                    {
                        <tr>
                            <td>@region.Id</td>
                            <td>@region.Code</td>
                            <td>@region.Name</td>
                            <td>
                                <a class="btn btn-light" asp-controller="Regions" asp-route-id="@region.Id" asp-action="Edit">Edit</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>